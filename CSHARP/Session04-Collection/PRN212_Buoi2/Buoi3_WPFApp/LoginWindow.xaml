<Window x:Class="Buoi3_WPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Buoi3_WPFApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" >
    <Grid Margin="0,0,0,-16">
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="280,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="329" TextChanged="TextBox_TextChanged"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="212,102,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.158,-0.371"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="212,146,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.158,-0.371"/>
        <PasswordBox x:Name="pwdPassword" HorizontalAlignment="Left" Margin="280,150,0,0" VerticalAlignment="Top" Width="329"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="280,194,0,0" VerticalAlignment="Top" Height="22" Width="90" Click="btnLogin_Click"/>

    </Grid>
</Window>
