<Window x:Class="WpfApp.Views.RoomInformationDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Views"
        mc:Ignorable="d"
        Title="RoomInformationDialogWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
            <GradientStop Color="Gold" Offset="3"/>
            <GradientStop Color="Black" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20,10,20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Số phòng" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold" />
        <TextBox x:Name="Number"  Grid.Row="1" Height="30" Text="{Binding Number, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"/>
        <TextBlock Grid.Row="2" Text="Mô tả" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <TextBox x:Name="Detail"  Grid.Row="3" Height="30" Text="{Binding Detail, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Row="4" Text="Sức chứa" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <TextBox x:Name="MaxCapacity"  Grid.Row="5" Height="30" Text="{Binding MaxCapacity, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"/>
        <TextBlock Grid.Row="6" Text="Loại" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <ComboBox x:Name="TypeId" Grid.Row="7" SelectedValue="{Binding TypeId, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}" ItemsSource="{Binding RoomTypes}" DisplayMemberPath="RoomTypeName" SelectedValuePath="RoomTypeId" Foreground="Black"/>
        <TextBlock Grid.Row="8" Text="Giá trong ngày" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <TextBox x:Name="PricePerDay"  Grid.Row="9" Height="30" Text="{Binding PricePerDay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"/>
        <CheckBox Grid.Row="10" Content="Trạng Thái" x:Name="Status" Foreground="Gold" FontWeight="Bold" IsChecked="{Binding Status, Mode=TwoWay}" Margin="0,10,0,5" HorizontalAlignment="Right"/>
        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right" Margin="30" >
            <Button Content="Lưu" Width="80" Margin="0 0 10 0" Command="{Binding SaveCommand}" Background="Gold" FontWeight="Bold"/>
            <Button Content="Bỏ qua" Width="80" Command="{Binding CancelCommand}" Background="Gold" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>