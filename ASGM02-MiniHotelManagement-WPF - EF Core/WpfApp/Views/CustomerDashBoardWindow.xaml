<Window x:Class="WpfApp.Views.CustomerDashBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Views"
        mc:Ignorable="d"
        Title="AdminDashBoardWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType ="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Gold"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="Yellow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
            <GradientStop Color="Gold" Offset="3"/>
            <GradientStop Color="Black" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="Black">
            <!-- Header -->
            <StackPanel>
                <TextBlock Text="Hệ Thống Khách Sạn" Foreground="White" FontSize="14" Margin="5"
                               FontWeight="Bold" VerticalAlignment="Center" />
                <StackPanel>
                    <Button Content="Hồ sơ"  
                        Command="{Binding NavigateCommand}" CommandParameter="Profile"/>
                    <Button Content="Lịch sử" 
                        Command="{Binding NavigateCommand}" CommandParameter="History"/>
                    <Button Content="Đăng Xuất" Background="Gold" Foreground="Black" BorderThickness="0"
                        Command="{Binding NavigateCommand}" CommandParameter="Logout"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Padding="10">
                <TextBlock Text="{Binding WelcomeMessage}" Foreground="White" FontSize="14" HorizontalAlignment="Right" FontWeight="Bold" />
            </Border>

            <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>
</Window>
