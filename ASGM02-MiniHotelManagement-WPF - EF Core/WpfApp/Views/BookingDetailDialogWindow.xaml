<Window x:Class="WpfApp.Views.BookingDetailDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Views"
        mc:Ignorable="d"
        Title="BookingReservationDialogWindow" Height="450" Width="800"
        xmlns:converters="clr-namespace:WpfApp.Converters"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
            <GradientStop Color="Gold" Offset="3"/>
            <GradientStop Color="Black" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <converters:DateOnlyToDateTimeConverter x:Key="DateOnlyConverter"/>
    </Window.Resources>

    <Grid Margin="20,10,20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Phòng" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <ComboBox Grid.Row="1" SelectedValue="{Binding RoomId, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" ItemsSource="{Binding Rooms}" DisplayMemberPath="RoomNumber" SelectedValuePath="RoomId" Foreground="Black"/>
        <TextBlock Grid.Row="2" Text="Ngày bắt đầu" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <DatePicker Grid.Row="3" Height="30" SelectedDate="{Binding StartDate, Converter={StaticResource DateOnlyConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
        <TextBlock Grid.Row="4" Text="kết thúc" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <DatePicker Grid.Row="5" Height="30" SelectedDate="{Binding EndDate, Converter={StaticResource DateOnlyConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="30" >
            <Button Content="Lưu" Width="80" Margin="0 0 10 0" Command="{Binding SaveCommand}" Background="Gold" FontWeight="Bold"/>
            <Button Content="Bỏ qua" Width="80" Command="{Binding CancelCommand}" Background="Gold" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>