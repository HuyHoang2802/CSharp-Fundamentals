<Window x:Class="WpfApp.Views.CustomerDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Views"
        mc:Ignorable="d"
        Title="CustomerDialogWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="1,1" EndPoint="1,0">
            <GradientStop Color="Gold" Offset="3"/>
            <GradientStop Color="Black" Offset="0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20,10,20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="Tên" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <TextBox x:Name="Name"  Grid.Row="1" Height="30" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"/>
        <TextBlock Grid.Row="2" Text="Số điện thoại" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <TextBox x:Name="Phone"  Grid.Row="3" Height="30" Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"/>
        <TextBlock Grid.Row="4" Text="Email" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <TextBox x:Name="Email"  Grid.Row="5" Height="30" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"/>
        <TextBlock Grid.Row="6" Text="Ngày sinh" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <DatePicker x:Name="Birthday"  Grid.Row="7" Height="30" SelectedDate="{Binding Birthday, Mode=TwoWay}"/>
        <TextBlock Grid.Row="8" Text="Mật khấu" Foreground="Gold" Margin="0,10,0,5" FontWeight="Bold"/>
        <TextBox x:Name="Password"  Grid.Row="9" Height="30" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=true}"/>
        <CheckBox Grid.Row="10" x:Name="Status" Foreground="Gold" FontWeight="Bold" Content="Trạng thái" IsChecked="{Binding Status, Mode=TwoWay}" Margin="0,10,0,5" HorizontalAlignment="Right"/>
        <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Right" Margin="30" >
            <Button Content="Lưu" Width="80" Margin="0 0 10 0" Command="{Binding SaveCommand}" Background="Gold" FontWeight="Bold"/>
            <Button Content="Bỏ qua" Width="80" Command="{Binding CancelCommand}" Background="Gold" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>